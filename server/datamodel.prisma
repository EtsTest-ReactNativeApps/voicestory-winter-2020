type User {
  id: ID! @id
  email: String @unique
  password: String!
  name: String!
  isSpeaker: Speaker
  favouritedVideos: [Video!]!
  ownedTickets: [Event!]!
}

type Video {
  id: ID! @id
  title: String!
  url: String!
  createdAt: DateTime @createdAt
  published: Boolean! @default(value: false)
  author: Speaker @relation(link: INLINE)
  theme: String!
}

type Speaker {
  id: ID! @id
  owner: User @relation(link:INLINE)
  profile_picture: String!
  title: String!
  linkedin: String
  facebook: String
  description: String!
  videos: [Video]! 
}

type Event {
  id: ID! @id
  title: String!
  description: String!
  date: String
  time: String
  thumbnail_url: String!
  location_name: String!
  location_address: String!
  price: Float
  maxTickets: Int!
  soldTickets: Int @default(value: 0)
  speakers: [Speaker]!
}