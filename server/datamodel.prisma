type User {
  id: ID! @id
  email: String @unique
  name: String!
  isSpeaker: Speaker
}

type Video {
  id: ID! @id
  title: String!
  published: Boolean! @default(value: false)
  author: Speaker @relation(link: INLINE)
}

type Speaker {
  id: ID! @id
  owner: User @relation(link:INLINE)
  profile_picture: String!
  titles: [String!]! @scalarList(strategy: RELATION)
  social_medias: [String]! @scalarList(strategy: RELATION)
  description: String!
  videos: [Video!]! 
  QAs: String
}
  