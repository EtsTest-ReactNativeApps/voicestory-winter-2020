type User {
  id: ID! @id
  email: String @unique
  name: String!
  isSpeaker: Speaker
  favouritedVideos: [Video!]!
  ownedTickets: [Event!]!
}

type Video {
  id: ID! @id
  title: String!
  url: String!
  createdAt: DateTime @createdAt
  published: Boolean! @default(value: false)
  author: Speaker @relation(link: INLINE)
  theme: String!
}

type Speaker {
  id: ID! @id
  owner: User @relation(link:INLINE)
  profile_picture: String!
  titles: [String!]! @scalarList(strategy: RELATION)
  social_medias: [String]! @scalarList(strategy: RELATION)
  description: String!
  videos: [Video!]! 
}
enum longLat {
  LONGITUDE
  LATITUDE
}

type Event {
  id: ID! @id
  title: String!
  description: String!
  thumbnail_url: String!
  location_name: String!
  location_address: String!
  location_coordinates: longLat! 
  price: Float
  maxTickets: Int!
  soldTickets: Int @default(value: 0)
  speakers: [Speaker]!
}